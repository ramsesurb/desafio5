<h1>Productos</h1>
<div class="entry">
{{#if productos}}
<div class="table-resposive">
<table class=" table table-resposive table-danger">
    <thead>
        <tr>
        <th scope="col">id</th>
        <th scope="col">Nombre</th>
        <th scope="col">Precio</th>
        <th scope="col">Imagen</th>
        </tr>
    </thead>
    <tbody>
      </div>
        {{#each productos}}
            <tr class="">
                <th scope="row">{{ this.id }}</th>
                <td>{{ this.tittle }}</td>
                <td>{{ this.price }}</td>
                <td><img src="{{ this.thumbnail }}" width="50"></td>
            </tr>
        {{/each}}
    </tbody>
</table>
{{else}}
    <br>
    <h3> No hay ning√∫n producto agregado. </h3>
{{/if}}
</div>